{
  "name": "han-prev-testing",
  "version": "1.0.19",
  "description": "Testing framework for Han Framework with DI support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "han-test": "./bin/test-runner.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run format && rimraf dist && tsc",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "han",
    "framework",
    "testing",
    "test",
    "di",
    "dependency-injection"
  ],
  "author": "Han Framework Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/han-framework.git",
    "directory": "packages/testing"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "dependencies": {
    "glob": "^10.3.0"
  },
  "peerDependencies": {
    "han-prev-core": "^1.0.13"
  },
  "peerDependenciesMeta": {
    "han-prev-core": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
